@model UserProfileModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="page-inner">
        <h4 class="page-title">User Profile - Raj Pawar</h4>
        <div class="row">
            <div class="col-md-8">
                <div class="card card-with-nav">
                    <div class="card-body" style="box-shadow: 4px 4px 10px 0 rgba(0,0,0,.1),4px 4px 15px -5px rgba(21,114,232,.4)!important;">
                        <form action="javascripy:void(0)" method="post">
                            <div class="row mt-3">
                                <div class="col-md-4">
                                    <div class="form-group form-group-default">
                                        <label>First Name</label>
                                        <input type="text" class="form-control" name="name" placeholder="First Name" value="Raj">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group form-group-default">
                                        <label>Last Name</label>
                                        <input type="text" class="form-control" name="email" placeholder="Last Name" value="Pawar">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group form-group-default">
                                        <label>Email</label>
                                        <input type="email" class="form-control" name="email" placeholder="Email" value="er.rajpawar@gmail.com">
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-4">
                                    <div class="form-group form-group-default">
                                        <label>Birth Date</label>
                                        <input type="text" class="form-control" id="datepicker" name="datepicker" value="24/10/1996" placeholder="Birth Date">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group form-group-default">
                                        <label>Gender</label>
                                        <select class="form-control" id="gender">
                                            <option>Male</option>
                                            <option>Female</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group form-group-default">
                                        <label>Phone</label>
                                        <input type="text" class="form-control" value="+91-9978747702" name="phone" placeholder="Phone">
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-12">
                                    <div class="form-group form-group-default">
                                        <label>House No. &amp; Street or Society</label>
                                        <input type="text" class="form-control" value="B/32, Miranagar Society, Udhna, Surat" name="address" placeholder="Address">
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-12">
                                    <div class="form-group form-group-default">
                                        <label>Area / Landmark</label>
                                        <input type="text" class="form-control" value="Nr. SMC School" name="address" placeholder="Address">
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-4">
                                    <div class="form-group form-group-default">
                                        <label>District</label>
                                        <input type="text" class="form-control" id="datepicker" name="datepicker" value="Udhna" placeholder="Birth Date">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group form-group-default">
                                        <label>State</label>
                                        <select class="form-control form-control" id="gender">
                                            <option>Gujarat</option>
                                            <option>Maharashtra</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group form-group-default">
                                        <label>Pincode</label>
                                        <input type="number" class="form-control" id="datepicker" name="datepicker" value="394210" placeholder="Birth Date">
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3 mb-1">
                                <div class="col-md-6">
                                    <div class="form-group form-group-default">
                                        <label>About Me</label>
                                        <textarea class="form-control" name="about" placeholder="About Me" rows="3">Never Stop Learning</textarea>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group form-group-default">
                                        <label>Profession</label>
                                        <input type="text" class="form-control" name="profession" placeholder="Profession" value="Software Architech">
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <div class="form-group form-group-default">
                                        <label>Password</label>
                                        <input type="password" class="form-control" id="datepicker" name="datepicker" value="Udhna" placeholder="Birth Date">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group form-group-default">
                                        <label>Confirm Password</label>
                                        <input type="password" class="form-control" id="datepicker" name="datepicker" value="394210" placeholder="Birth Date">
                                    </div>
                                </div>
                            </div>
                            <div class="text-right mt-3 mb-3">
                                <button id="save-user-details-id" class="btn btn-success btn-sm" style="box-shadow: 4px 4px 10px 0 rgba(0,0,0,.1),4px 4px 15px -5px rgba(21,114,232,.4) !important;">
                                    Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-profile">
                    <div class="card-header" style="background-image: url('~/Content/Themes/Admin/assets/img/blogpost.jpg'); background-color:#0f5abc;">
                        <div class="profile-picture">
                            <div class="avatar avatar-xl">
                                <img src="~/Content/Themes/Admin/assets/img/rajAdmin.png"
                                     alt="..."
                                     class="avatar-img rounded-circle"
                                     style="box-shadow: 4px 4px 10px 0 rgba(0,0,0,.1),4px 4px 15px -5px rgba(21,114,232,.4) !important;">
                            </div>
                        </div>
                    </div>
                    <div class="card-body" style="box-shadow: 4px 4px 10px 0 rgba(0,0,0,.1),4px 4px 15px -5px rgba(21,114,232,.4)!important;">
                        <div class="user-profile text-center">
                            <div class="name">Raj Pawar</div>
                            <div class="job">Software Architect</div>
                            <div class="desc">Never Stop Learning</div>
                            <div class="social-media">
                                <a class="btn btn-info btn-twitter btn-sm btn-link" href="https://www.facebook.com/Mr.RajPawar/" target="_blank">
                                    <span class="btn-label just-icon"><i class="flaticon-facebook"></i> </span>
                                </a>
                                <a class="btn btn-danger btn-sm btn-link" rel="publisher" href="https://twitter.com/RajPawarr" target="_blank">
                                    <span class="btn-label just-icon"><i class="flaticon-twitter"></i> </span>
                                </a>
                                <a class="btn btn-primary btn-sm btn-link" rel="publisher" href="https://www.instagram.com/raj.pwr/" target="_blank">
                                    <span class="btn-label just-icon"><i class="flaticon-instagram"></i> </span>
                                </a>
                                <a class="btn btn-danger btn-sm btn-link" rel="publisher" href="https://www.linkedin.com/in/rajpawar/" target="_blank">
                                    <span class="btn-label just-icon"><i class="flaticon-linkedin"></i> </span>
                                </a>
                            </div>
                            <div><input type="file" class="form-control" value="" name="ProfilePic"></div>
                            <hr class="separator-dashed" />
                            <div><i class="fab fa-facebook-f"></i><input type="text" class="form-control" value="https://www.facebook.com/Mr.RajPawar/" name="facebooklink" placeholder="https://"></div>
                            <hr class="separator-dashed" />
                            <div><i class="fab fa-twitter"></i><input type="text" class="form-control" value="https://twitter.com/RajPawarr" name="twitterlink" placeholder="https://"></div>
                            <hr class="separator-dashed" />
                            <div><i class="fab fa-instagram"></i><input type="text" class="form-control" value="https://www.instagram.com/raj.pwr/" name="instagramlink" placeholder="https://"></div>
                            <hr class="separator-dashed" />
                            <div><i class="fab fa-linkedin"></i><input type="text" class="form-control" value="https://www.linkedin.com/in/rajpawar/" name="linkedinlink" placeholder="https://"></div>
                        </div>
                    </div>
                    <div class="card-footer" style="box-shadow: 4px 4px 10px 0 rgba(0,0,0,.1),4px 4px 15px -5px rgba(21,114,232,.4)!important;">
                        <div class="row user-stats text-center">
                            <div class="col">
                                <div class="number">654</div>
                                <div class="title">Post</div>
                            </div>
                            <div class="col">
                                <div class="number">1.2K</div>
                                <div class="title">Followers</div>
                            </div>
                            <div class="col">
                                <div class="number">134</div>
                                <div class="title">Following</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#save-user-details-id').click(function (e) {
        swal("Done", "User details saved successfully!", {
            icon: "success",
            buttons: {
                confirm: {
                    className: 'btn btn-success'
                }
            },
        });
    });
</script>