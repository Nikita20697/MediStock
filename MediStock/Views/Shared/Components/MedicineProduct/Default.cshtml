@model List<MediStockWeb.Models.HomeModel>
<section class="module-small">
    <div class="container">
        <div class="row multi-columns-row">
            @foreach (var ctgr in Model)
            {
                <div class="col-sm-6 col-md-3 col-lg-3">
                    <div class="shop-item">
                        <div class="shop-item-image">
                            <img src="@ctgr.ImageUrl" alt="Accessories Pack" />
                            <div class="shop-item-detail"><a class="btn btn-round btn-b" href="@Url.Action("AddToCart","Cart",new { id= ctgr.MedicineId })"><span class="icon-basket" data-id="@ctgr.MedicineId">Add To Cart</span></a></div>
                        </div>
                        <h4 class="shop-item-title font-alt"><a href="#">@ctgr.Name</a></h4>@ctgr.Price
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script type="text/javascript">
    var medicine = [];
    $(".icon-basket").click(function () {
        var Medicineid = $(this).attr('data-id');
        medicine.push(Medicineid);
        swal("Done", "Product Added To Cart", "success");
    });

</script>
